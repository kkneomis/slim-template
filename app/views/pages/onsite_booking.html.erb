<%= render "layouts/onsite_top.html.erb" %>
<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title"><h4>BOOK THIS SPACE</h4></div>
      </div><!--.panel-heading-->
      <div class="panel-body">

        <div class="row example-row">
          <style>
            .sample-member719 {
              background-image: url('/assets/room.jpg');
            }
          </style>
          <div class="col-md-4">
            <div class="card card-user card-clickable card-clickable-over-content">

              <div class="card-heading heading-full">
                <div class="user-image sample-member719"></div>

                <div class="clickable-button">
                  <div class="layer bg-green"></div>
                  <a class="btn btn-floating btn-green initial-position floating-open"><i class="ion-android-share-alt"></i></a>
                </div>

                <div class="layered-content bg-indigo">
                  <div class="overflow-content">
                    <h4>Follow Aleksio</h4>
                    <ul class="inline-list social-list borderless">
                      <li><a class="btn btn-facebook btn-ripple"><i class="ion-social-facebook"></i></a></li>
                      <li><a class="btn btn-twitter btn-ripple"><i class="ion-social-twitter"></i></a></li>
                      <li><a class="btn btn-googleplus btn-ripple"><i class="ion-social-googleplus"></i></a></li>
                    </ul>
                  </div><!--.overflow-content-->
                  <div class="clickable-close-button">
                    <a class="btn btn-floating initial-position floating-close"><i class="ion-android-close"></i></a>
                  </div>
                </div>

              </div><!--.card-heading-->

              <div class="card-body">
                <h3 class="card-title"><a href="#">Main Conference Room</a></h3>
                <div class="subhead">Room 300 <a href="#">in Lesko Building</a></div>

                <p></p>
              </div><!--.card-body-->

              <div class="card-footer">
                <button class="btn btn-xs btn-indigo pull-right" onclick="$(location).attr('href', '/pages/detail')">View this Space</button>
              </div><!--.card-footer-->

            </div><!--.card-->
          </div><!--.col-md-4-->
          <div class="col-md-8">
            <div class="form-group">
              <label class="control-label col-md-3">Event Name</label>
              <div class="col-md-9">
                <div class="inputer">
                  <div class="input-wrapper">
                    <input type="text" name="" class="form-control" autofocus>
                  </div>
                </div>
              </div>
            </div><!--.form-group-->

            <div class="form-group">
              <label class="control-label col-md-3">Event Period</label>
              <div class="col-md-9">
                <div class="control-group">
                  <div class="controls">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="ion-android-calendar"></i></span>
                      <div class="inputer">
                        <div class="input-wrapper">
                          <input type="text" style="width: 400px" name="reservation" class="form-control bootstrap-daterangepicker-date-time" value="08/01/2013 1:00 PM - 08/01/2013 1:30 PM">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div><!--.form-group-->

          </div><!--.col-md-8-->
        </div><!--.row-->

      </div><!--.panel-body-->
    </div><!--.panel-->
  </div><!--.col-md-12-->
</div><!--.row-->
